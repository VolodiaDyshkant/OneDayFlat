
@model IEnumerable<OneDayFlat.Models.Flat>

@{
    ViewBag.Title = "Додавання користувача";
}
<form asp-action="Create" asp-controller="Home" method="post" enctype="multipart/form-data">
    <p>
        <label>Имя</label>
        <input name="Name" class="form-control" />
    </p>
    <p>
        <label>Картинка</label>
        <input name="Avatar" type="file" class="form-control" />
    </p>
    <p>
        <input type="submit" value="Додати" />
    </p>
</form>
<h3>Всі користувачі</h3>
@foreach (var p in Model)
{
    <div>
        <h4>@p.City</h4>
        @if (p.Image != null)
        {
            <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(p.Image))" />
        }
    </div>
}

